# Aliases
alias sudo="sudo "
alias s="sudo "
alias sp="sudo pacman"

alias ls="ls --color=auto -Fh"
alias lsa="ls --color=auto -FAh"
alias ll="ls --color=auto -Fhl"
alias lla="ls --color=auto -FAhl"
alias cp="cp -r"
alias rsync="rsync -rPh"
alias c="clear"
alias e="exit"

alias v=$EDITOR
alias sv="sudoedit"
alias git="hub"

alias verynice="ionice -c3 nice -n 15 "
alias schedbatch="schedtool -B -e "

alias mtpmount="jmtpfs ~/mtp"
alias mtpumount="fusermount -u ~/mtp"


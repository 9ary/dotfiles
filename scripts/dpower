#!/usr/bin/bash

action=$(echo "Lock
Suspend
Logout
Kexec
Reboot
Shutdown" | dmenu)

case $action in
	"Lock" )
		i3lock-wrapper
		;;

	"Suspend" )
		i3lock-wrapper
		systemctl suspend
		;;

	"Logout" )
		i3-msg exit
		;;

	"Kexec" )
		sudo systemctl kexec
		;;

	"Reboot" )
		systemctl reboot
		;;

	"Shutdown" )
		systemctl poweroff
		;;
esac


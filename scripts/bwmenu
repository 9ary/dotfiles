#!/bin/bash

set -e
timeout=15

pwlist=$(rbw list)
entry=$(echo "$pwlist" | fzf)
[[ -n $entry ]] || exit

password=$(rbw get "$entry")
echo "$password" | timeout "$timeout" wl-copy -fno &

notify-send \
	"Password for $entry copied to clipboard" \
	"You have $timeout seconds to paste it somewhere."

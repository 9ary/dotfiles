super r
	dmenu_run -p '>'

super shift q
	i3-msg exit

XF86Eject
	systemctl suspend

super {_,shift} Return
	$TERMINAL {_,-e ranger}

{_,shift,alt} Print
	srht {_,-s,-w}

XF86Audio{Play,Next,Prev}
	mpc {toggle,next,prev}

XF86Audio{RaiseVolume,LowerVolume,Mute}
	pulseaudio-ctl {up,down,mute}

shift XF86Audio{RaiseVolume,LowerVolume}
	socos volume 10.0.0.11 {+,-}5

XF86Tools
	$TERMINAL -e ncmpcpp

shift XF86Tools
	pavucontrol

XF86Launch{8,9}
	razer-profile {+,-}

super c
	clipmenu

super ctrl r
	pkill -SIGUSR1 sxhkd


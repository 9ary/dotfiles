# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status -c ~/.i3/i3status.conf
	tray_output HDMI-0

	colors {
		separator #5C5855
		background #090300
		statusline #A5A2A2
		focused_workspace #A5A2A2 #A5A2A2 #090300
		active_workspace #5C5855 #5C5855 #090300
		inactive_workspace #090300 #090300 #A5A2A2
		urgent_workspace #DB2D20 #DB2D20 #A5A2A2
	}
}

# pretty colors
client.focused #A5A2A2 #A5A2A2 #090300 #A5A2A2
client.focused_inactive #5C5855 #5C5855 #090300 #5C5855
client.unfocused #090300 #090300 #A5A2A2 #090300
client.urgent #DB2D20 #DB2D20 #A5A2A2 #DB2D20

# nicer borders
new_window pixel 1

# Run some scripts
exec_always --no-startup-id i3-dunst-autopause.py


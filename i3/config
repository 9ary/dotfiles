font pango:xos4 Terminus 9

set $mod Mod4
floating_modifier $mod

bindsym $mod+q kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Focus with the mouse wheel
bindsym --release --border --whole-window --exclude-titlebar button4 focus
bindsym --release --border --whole-window --exclude-titlebar button5 focus

focus_follows_mouse no
focus_on_window_activation urgent

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+semicolon split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle
bindsym $mod+g mark --toggle *fsglobal

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+d focus child

# workspaces
set $www 1:www
workspace $www output HDMI-A-0
assign [class="Chromium"] $www
assign [class="Firefox"] $www

set $im 2:im
workspace $im output DVI-I-1
assign [title="WeeChat"] $im
assign [class="TelegramDesktop"] $im

bindsym $mod+1 workspace $www
bindsym $mod+2 workspace $im
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+n workspace next_on_output
bindsym $mod+p workspace prev_on_output
bindsym $mod+Escape workspace back_and_forth

bindsym $mod+Shift+1 move container to workspace $www
bindsym $mod+Shift+2 move container to workspace $im
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
bindsym $mod+Shift+n move container to workspace next_on_output
bindsym $mod+Shift+p move container to workspace prev_on_output

bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output right

bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Down move workspace to output down
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Right move workspace to output right

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+shift+q exit

bindsym XF86Sleep exec --no-startup-id systemctl suspend

bindsym $mod+r exec rofi -show run -modi run
bindsym $mod+Return exec $TERMINAL
bindsym $mod+shift+Return exec $TERMINAL -e ranger
bindsym $mod+c exec --no-startup-id passmenu --type

bindsym Print exec --no-startup-id wankparty -w
bindsym shift+Print exec --no-startup-id wankparty -s
bindsym Ctrl+Print exec --no-startup-id wankparty

bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioPrev exec --no-startup-id mpc cdprev
bindsym XF86AudioRaiseVolume exec --no-startup-id alsa-volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id alsa-volume.sh down
bindsym XF86AudioMute exec --no-startup-id alsa-volume.sh mute
bindsym shift+XF86AudioRaiseVolume exec --no-startup-id sonos.py +
bindsym shift+XF86AudioLowerVolume exec --no-startup-id sonos.py -
bindsym shift+XF86AudioMute exec --no-startup-id sonos.py mute
bindsym shift+XF86AudioPlay exec --no-startup-id sonos.py line_in
bindsym XF86Tools exec $TERMINAL -e ncmpcpp

bindsym XF86Launch8 exec --no-startup-id exec razer-profile +
bindsym XF86Launch9 exec --no-startup-id exec razer-profile -

bar {
	status_command i3status -c ~/.i3/i3status.conf | i3status.py
	tray_output HDMI-A-0
	separator_symbol -

	colors {
		separator #484848
		background #181818
		statusline #909090
		focused_workspace #909090 #909090 #181818
		active_workspace #484848 #484848 #181818
		inactive_workspace #303030 #303030 #909090
		urgent_workspace #C03030 #C03030 #909090
	}
}


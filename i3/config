bindsym $mod+p exec --no-startup-id i3-ws.py prev
bindsym $mod+g exec --no-startup-id i3-workspaces.py -s
bindsym $mod+Ctrl+g exec --no-startup-id i3-workspaces.py -r
bindsym $mod+Escape workspace back_and_forth

# move focused container to workspace

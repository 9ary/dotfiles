#!/usr/bin/bash

source ~/.envrc

xrdb -merge -override ~/dotfiles/x/Xresources

# Don't ring bells
xset b off

# Mouse settings
razer-profile

pulseaudio --start
exec autocutsel -fork &
exec clipmenud &
exec keynav &
exec unclutter -idle 3 -jitter 2 -root &
exec dunst &
exec sxhkd &
exec chromium-su &
exec qbittorrent &
exec thunderbird &
exec telegram &
exec $TERMINAL -title "WeeChat" -e weechat &
exec dropbox &
exec nm-applet &
exec redshift-gtk &

exec ~/.fehbg &
exec compton &
exec i3


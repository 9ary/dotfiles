#!/usr/bin/bash

source ~/.envrc

xrdb -merge -override ~/dotfiles/x/Xresources

# Disable this shitty power saving
xset s off
xset -dpms

# Don't ring bells
xset b off

# Mouse speed
xset m 7/4 0

source /etc/X11/xinit/xinitrc.d/30-dbus
pulseaudio --start

exec autocutsel -fork &
exec clipmenud &
exec keynav &
exec unclutter -idle 3 -jitter 2 -root &
exec dunst &
exec sxhkd &
exec firefox &
exec qbittorrent &
exec thunderbird &
exec telegram &
exec $TERMINAL -title "WeeChat" -e weechat &
exec dropbox &
exec nm-applet &
exec redshift-gtk &

exec ~/.fehbg &
exec compton &
exec i3


#!/usr/bin/zsh

setopt nobgnice

xrandr --setmonitor topleft 1920/304x1080/174+0+0 DisplayPort-0
xrandr --setmonitor topright 1920/304x1080/174+1920+0 none
xrandr --setmonitor bottom 3840/608x1080/174+0+1080 none

xrdb ~/dotfiles/x/Xresources

# Don't ring bells
xset b off

# Mouse settings
da2013ctl -w off -l off -f 1000 -r 2100

xsettingsd &
dunst &
keynav &
unclutter --timeout 2 --jitter 2 &
firefox-nightly &
transmission-gtk -m &
telegram-desktop &
$TERMINAL -title "WeeChat" -e weechat &
dropbox &
nm-applet &
udiskie &
redshift-gtk &

~/.fehbg &
compton &
exec i3


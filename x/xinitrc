#!/usr/bin/bash

source ~/.envrc

xrdb -merge -override ~/dotfiles/x/Xresources

# Disable this shitty power saving
xset s off
xset -dpms

# Don't ring bells
xset b off

# Mouse speed
xset m 2/1 3

source /etc/X11/xinit/xinitrc.d/30-dbus
pulseaudio --start

exec autocutsel -fork &
exec keynav &
exec unclutter -idle 1 -jitter 2 -root &
exec dunst &
exec firefox&
exec qbittorrent &
exec $TERMINAL -title "WeeChat" -e weechat &
exec dropbox &
exec nm-applet &
exec redshift-gtk &

source ~/.fehbg
exec compton &
exec i3

